<div class="row span8 offset2">
  <h1><%= deploy.name %><small> deployed </small><%= deploy.tag %><small> to </small><%= deploy.env %></h1>
</div>

<div class="row span8 offset2">
  <span>
      <%= deploy.start.strftime('%l:%M%P') %> <small class="muted"><%= deploy.start.strftime('%m/%d/%y') %></small>
  </span>
</div>
<div class="row span8 offset2">
    <span class="label label-info pull-right">command</span>
    <pre><%= deploy.cmd %></pre>
</div>

<div class="row span8 offset2">
  <pre id="output"><%=h deploy.log.read %></pre>
</div>

<% content_for :js do %>
  <script src="/js/app.js"></script>
<% end %>